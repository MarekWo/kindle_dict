# kindle_dict\.env.example

# Django settings
DEBUG=False
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
DB_NAME=kindle_dict
DB_USER=kindle_dict_user
DB_PASSWORD=your_db_password_here
DB_HOST=db
DB_PORT=5432

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379

# File storage
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# Language
LANGUAGE_CODE=pl
TIME_ZONE=Europe/Warsaw

# Site URL
SITE_URL=http://localhost:8000

# Email settings (optional, can be configured via admin panel)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_password
DEFAULT_FROM_EMAIL=your_email@example.com

# CAPTCHA settings (optional, can be configured via admin panel)
CAPTCHA_PROVIDER=cloudflare
CAPTCHA_SITE_KEY=your_site_key_here
CAPTCHA_SECRET_KEY=your_secret_key_here
CAPTCHA_ENABLED=True
